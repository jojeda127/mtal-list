<mvc:View
    controllerName="logaligroup.lists.controller.ListView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                    <IconTabBar id="_IDGenIconTabBar1" >
                    <items>
                    <IconTabFilter id="_IDGenIconTabFilter1" text="{i18n>objectList}">
                    <List id="_IDGenList1" items="{path:'/Products', 
                                                    filters: [{
                                                       path: 'Brand',
                                                       operator: 'EQ',
                                                       value1: 'Compaq'
                                                                }]
                                                                }">
                    <items>
                    <ObjectListItem title="{Material} {Brand} {Model}" 
                                    number="{Price}" 
                                    numberUnit="{Currency}" 
                                    type="Detail" >
                                    <ObjectAttribute text="{Brand}"/>
                                    <ObjectAttribute text="{Weight}"/>
                    </ObjectListItem>
                    </items>
                    </List>
                    </IconTabFilter>
                    <IconTabFilter id="_IDGenIconTabFilter2" text="{i18n>standardList}">
                     <Select selectedKey="{/typeSelection}">
                    <items>
                    <core:Item key="None" text="None"></core:Item>
                    <core:Item key="MultiSelect" text="MultiSelect"></core:Item>
                    <core:Item key="SingleSelect" text="SingleSelect"></core:Item>
                    <core:Item key="SingleSelectLeft" text="SingleSelectLeft"></core:Item>
                    <core:Item key="SingleSelectMaster" text="SingleSelectMaster"></core:Item>
                    </items>
                    </Select>
                    <Button id="btnMessage" text="Show message" press="onShowMessage"></Button>
                    <Button id="btnDelete" text="Delete" press="onDelete"></Button>
                     <List id="standardList" items="{path:'/Products',
                                                     sorter:{
                                                         path:'Brand',
                                                         descending:'false',
                                                         group:true
                                                     }}"
                                                     mode="{/typeSelection}">
                    
                    <items>
                    <StandardListItem  title= "{Material} {Brand} {Model}" 
                                       info="{Price}{Currency}"  
                                       description="{Weight}"
                                       type="Active"
                                       >
                                       </StandardListItem>
                    </items>
                    </List>
                    </IconTabFilter>
                    <IconTabFilter id="_IDGenIconTabFilter3" text="{i18n>inputList}">
                    <List items="{/Products}" mode="Delete" delete="onDelete">
                    <items>
                    <InputListItem label="{Brand}">
                    <Select items="{Properties}">
                    <core:Item key="{Key}" text="{Text}"></core:Item>
                    </Select>
                    </InputListItem>
                    </items>
                    </List>
                    </IconTabFilter>
                    <IconTabFilter id="_IDGenIconTabFilter4" text="{i18n>notificationList}">
                    <List id="ListNotification" items="{/News}">
                    <items>
                    <NotificationListItem title="{Title}" description="{Description}" unread="true" showCloseButton="{Unread}" authorName="{Author}" priority="{Priority}" ></NotificationListItem>
                    </items>
                    
                    </List>
                    </IconTabFilter>
                    <IconTabFilter id="_IDGenIconTabFilter5" text="{i18n>customList}">
                    <List id="ListCustom" items="{/News}">
                    <items>
                    <CustomListItem>
                    <layout:Grid defaultSpan="XL3 L3 M6 S12">
                    <Text text="{Title}"></Text>
                    <Text text="{Author}"></Text>
                    <Text text="{Description}"></Text>
                    </layout:Grid>
                    </CustomListItem>
                    </items>
                    </List>
                    </IconTabFilter>
                    </items>
                    </IconTabBar>
                    <Text id="texId" text = "Hello"></Text>
                    </content >
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
